<section>
    <div class="container">
        <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
<table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 100px;height: 100px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}"class="btn btn-primary" >Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}}')" >Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(function (){
    $('#productsTable').DataTable();
  })
 
</script>
<style>
    table.dataTable td,th {
            border: 1px solid #ddd; /* Border style */
            padding: 8px; /* Padding for cell content */
            text-align: center; /* Center-align cell content */
        }

</style>